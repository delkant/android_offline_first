        <!--TextView
            android:id="@+id/card_bullet_info"
            android:layout_width="@dimen/card_bullet_info"
            android:layout_height="@dimen/card_bullet_info"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/bullet_info"
            android:gravity="center"
            android:text="Bullet Info"
            android:textSize="8sp"
            android:textStyle="bold" /-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/card_selection"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/card_select_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <!--
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:paddingLeft="@dimen/card_image_wrap"
            android:paddingRight="@dimen/card_bullet_info"-->



            <TextView
                android:id="@+id/card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:padding="2dp"
                android:text=""
                android:textColor="@color/primary_text"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/card_selected"
                />

            <TextView
                android:id="@+id/card_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_title"
                android:layout_margin="0dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:padding="2dp"
                android:text="subtitle"
                android:textColor="@color/primary_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/card_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_subtitle"
                android:layout_margin="2dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:padding="0dp"
                android:paddingBottom="8dp"
                android:text="description"
                android:textColor="@color/primary_text"
                android:textSize="11sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/card_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:padding="2dp"
                android:text="@string/Birthday"
                android:textColor="@color/primary_text"
                android:textSize="12sp" />
        </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>